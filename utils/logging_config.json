{
    "version": 1,
    "formatters": {
        "detailed": {
            "format": "%(asctime)s [%(levelname)s] - %(module)s - Worker: %(process)d - %(message)s"
        }
    },
    "handlers": {
        "zeenwoman_handler": {
            "class": "concurrent_log_handler.ConcurrentTimedRotatingFileHandler",
            "formatter": "detailed",
            "filename": "./logs/zeenwoman.log",
            "when": "midnight",
            "interval": 1,
            "backupCount": 30,
            "delay": true
        },
        "wovworld_handler": {
            "class": "concurrent_log_handler.ConcurrentTimedRotatingFileHandler",
            "formatter": "detailed",
            "filename": "./logs/wovworld.log",
            "when": "midnight",
            "interval": 1,
            "backupCount": 30,
            "delay": true
        },
        "sulafah_handler": {
            "class": "concurrent_log_handler.ConcurrentTimedRotatingFileHandler",
            "formatter": "detailed",
            "filename": "./logs/sulafah.log",
            "when": "midnight",
            "interval": 1,
            "backupCount": 30,
            "delay": true
        },
        "sputnik_handler": {
            "class": "concurrent_log_handler.ConcurrentTimedRotatingFileHandler",
            "formatter": "detailed",
            "filename": "./logs/sputnik.log",
            "when": "midnight",
            "interval": 1,
            "backupCount": 30,
            "delay": true
        }
    },
    "loggers": {
        "zeenwoman": {
            "handlers": ["zeenwoman_handler"],
            "level": "INFO"
        },
        "wovworld": {
            "handlers": ["wovworld_handler"],
            "level": "INFO"
        },
        "sulafah": {
            "handlers": ["sulafah_handler"],
            "level": "INFO"
        },
        "sputnik": {
            "handlers": ["sputnik_handler"],
            "level": "INFO"            
        }
    }
}